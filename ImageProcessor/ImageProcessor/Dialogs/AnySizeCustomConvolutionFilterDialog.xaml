<ContentDialog
    x:Class="ImageProcessor.Dialogs.AnySizeCustomConvolutionFilterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageProcessor.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Convolution filter kernel"
    SecondaryButtonText="OK"
    PrimaryButtonText="Close"
    Width="Auto" Height="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="320px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480px"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TextValue" Grid.Column="0" Grid.Row="0" Margin="0" 
                 AcceptsReturn="True"/>
    </Grid>
</ContentDialog>